<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0.5dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/runtime_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Runtime"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/detail_runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/runtime_holder"
            android:fontFamily="sans-serif-condensed"
            android:text=""
            android:textAppearance="?android:textAppearanceSmall"

            />

        <TextView
            android:id="@+id/certification_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/runtime_holder"
            android:fontFamily="sans-serif-condensed"
            android:text="Genre"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/detail_certification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/certification_holder"
            android:layout_below="@id/detail_runtime"
            android:fontFamily="sans-serif-condensed"
            android:text=""
            android:textAppearance="?android:textAppearanceSmall" />


        <TextView
            android:id="@+id/language_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/certification_holder"
            android:fontFamily="sans-serif-condensed"
            android:text="Language"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView

            android:id="@+id/detail_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/language_holder"
            android:layout_below="@id/detail_certification"
            android:fontFamily="sans-serif-condensed"
            android:text=""
            android:textAppearance="?android:textAppearanceSmall" />

        <TextView
            android:id="@+id/release_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/language_holder"
            android:fontFamily="sans-serif-condensed"
            android:text="Release Date"
            android:textAppearance="?android:textAppearanceMedium" />


        <TextView
            android:id="@+id/detail_released"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/release_holder"
            android:layout_below="@id/detail_language"
            android:fontFamily="sans-serif-condensed"
            android:text=" "
            android:textAppearance="?android:textAppearanceSmall" />

    </RelativeLayout>

</android.support.v7.widget.CardView>