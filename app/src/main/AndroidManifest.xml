<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.salroid.filmy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FilmyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Base">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MovieDetailsActivity"
            android:label=" "
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.CharacterDetailsActivity"
            android:label=" "
            android:theme="@style/AppTheme.Base" />

        <provider
            android:name=".Provider.FilmProvider"
            android:authorities="tech.salroid.filmy" />

        <activity
            android:name=".SearchFragment"
            android:label=" "
            android:theme="@style/AppTheme.Base" />
        <activity
            android:name=".Activity.FullCastActivity"
            android:label=" "
            android:theme="@style/AppTheme.Base" />
        <activity
            android:name=".Activity.FullMovieActivity"
            android:label="@string/title_activity_full_movie"
            android:theme="@style/AppTheme.Base"></activity>
    </application>

</manifest>